@using TestMongoDB_InWebApplication.DomainModel.Entity

@model List<Customer>

<table id="CustomersTable" class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>نام</th>
            <th>نام خانوادگی</th>
            <th>موبایل</th>
            <th>عملیات</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var customer in Model)
            {
                <tr>
                    <td>@customer.Name</td>
                    <td>@customer.Family</td>
                    <td>@customer.MobileNumber.Value</td>
                    <td>
                    <a class="btn btn-primary btn-sm" href="">ویرایش</a>
                    <button id="RemoveCustomer" data-id="@customer.Id" class="btn btn-danger btn-sm btn-remove">حذف</button>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

@section Scripts
{
     <script></Script>
}