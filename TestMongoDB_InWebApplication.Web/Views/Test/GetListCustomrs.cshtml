@using TestMongoDB_InWebApplication.DomainModel.Entity

@model List<Customer>

<table id="CustomersTable" class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>نام</th>
            <th>نام خانوادگی</th>
            <th>موبایل</th>
            <th>عملیات</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var customer in Model)
            {
                <tr>
                    <td>@customer.Name</td>
                    <td>@customer.Family</td>
                    <td>@customer.MobileNumber</td>
                    <td>@customer.Id</td>
                </tr>
            }
        }
    </tbody>
</table>
